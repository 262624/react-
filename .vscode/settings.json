{
  "typescript.tsdk": "./node_modules/typescript/lib",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": false,
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.formatOnSave": true
  },
  "[scss]": {
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.formatOnSave": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "json.schemas": [
    {
      "fileMatch": ["/manifest.json"],
      "url": "http://json.schemastore.org/chrome-manifest"
    }
  ],
  "files.associations": {
    "*.env.development": "env",
    "*.env": "env"
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/yarn.lock": true
  },
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/dist": true
  },
  "explorer.sortOrder": "filesFirst",
  "explorer.sortOrderLexicographicOptions": "lower",
  "i18n-ally.localesPaths": [
    "src/Popup/i18n",
    "src/Popup/pages/Popup/Aptos/Transaction/components/TxMessage/messages",
    "src/Popup/pages/Popup/Ethereum/Transaction/components/TxMessage/messages",
    "src/Popup/pages/Popup/Sui/Transaction/components/TxMessage/messages",
    "src/Popup/pages/Popup/Cosmos/Sign/Amino/components/TxMessage/messages",
    "src/Popup/pages/Popup/Cosmos/Sign/Direct/components/TxMessage/messages",
    "src/Popup/pages/Popup/Cosmos/Sign/Message/components/TxMessage/messages"
  ]
}
